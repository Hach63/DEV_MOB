<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="13sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FullName"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAPP"/>


            <EditText

                android:id="@+id/idNameP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableRight="@drawable/ic_fullname"
                android:drawableTint="@color/colorAPP"
                android:hint="Full Name"
                android:inputType="text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:focusableInTouchMode="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAPP"/>

            <EditText
                android:id="@+id/idEmailP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:focusableInTouchMode="false"
                android:drawableRight="@drawable/ic_email"
                android:drawableTint="@color/colorAPP"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cin"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAPP"/>

            <EditText
                android:id="@+id/idCinP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableRight="@drawable/ic_cin"
                android:drawableTint="@color/colorAPP"
                android:focusableInTouchMode="false"
                android:hint="CIN"
                android:inputType="number"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAPP"/>

            <EditText
                android:id="@+id/idPhoneP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:focusableInTouchMode="false"
                android:drawableRight="@drawable/ic_phone"
                android:drawableTint="@color/colorAPP"
                android:hint="Phone"
                android:inputType="number"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"/>




        </LinearLayout>
        <Button
            android:id="@+id/editP"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:backgroundTint="@color/white"
            android:text="EDIT"
            app:cornerRadius="20sp"
            android:textColor="@color/colorAPP"
            />
        <Button
            android:id="@+id/logoutP"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:backgroundTint="@color/colorAPP"
            android:text="LOG OUT"
            app:cornerRadius="20sp" />

    </LinearLayout>


</ScrollView>
